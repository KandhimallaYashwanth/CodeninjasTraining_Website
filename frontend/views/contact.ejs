<%- include('partials/header') %>

<link rel="stylesheet" href="/css/contact.css">

<main>

    <div id="popup-message" class="popup">
        <div class="popup-content">
            <span id="popup-text"></span>
            <button id="popup-close" class="popup-close-btn">&times;</button>
        </div>
    </div>


    <section id="contact-hero-unique" class="container">
        <div class="contact-hero-content animate-on-scroll text-center">
            <h1 class="section-title">
                Let's Build Your <span class="gradient-text">Future Together.</span>
            </h1>
            <p class="section-subtitle">
                Reach out to us for inquiries, course details, or any questions you may have.
            </p>
        </div>
    </section>

    <section id="contact-main-content" class="contact-container">
        <div class="contact-grid">
            <!-- Left Column: Contact Information Card -->
            <div class="contact-info-card animate-on-scroll">
                <h3 class="contact-card-title">Get in Touch Directly</h3>
                <p class="contact-card-subtitle">We're here to help you every step of the way.</p>

                <ul class="info-list-unique">
                    <li>
                        <div class="info-icon-wrapper"><i data-feather="phone"></i></div>
                        <div>
                            <h4>Call Us Anytime</h4>
                            <p><a href="tel:+918019626242">+91 80196 26242</a></p>
                        </div>
                    </li>
                    <li>
                        <div class="info-icon-wrapper"><i data-feather="mail"></i></div>
                        <div>
                            <h4>Email Support</h4>
                            <p><a href="mailto:info@codeninjas-training.in">info@codeninjas-training.in</a></p>
                        </div>
                    </li>
                    <li>
                        <div class="info-icon-wrapper"><i data-feather="map-pin"></i></div>
                        <div>
                            <h4>Our Location</h4>
                            <p>17, 2ND FLOOR, 7TH MAIN ROAD, <br>II STAGE, INDIRANAGAR,<br>BANGALORE - 560038, Karnataka, India</p>
                            
                        </div>
                    </li>
                    <li>
                        <div class="info-icon-wrapper"><i data-feather="clock"></i></div>
                        <div>
                            <h4>Office Hours</h4>
                            <p>Monday - Friday: 9:00 AM - 7:00 PM<br>Saturday: 10:00 AM - 5:00 PM<br>Sunday: Closed</p>
                        </div>
                    </li>
                </ul>

                <div class="social-connect-unique">
                    <h4>Contact Us</h4>
                    <div class="social-links-unique">
                        <a href="https://wa.me/918019626242" target="_blank" aria-label="WhatsApp"><i class="fa-brands fa-whatsapp"></i></a>
                    </div>
                </div>
            </div>

            <!-- Right Column: Contact Form -->
            <div class="contact-form-unique-block animate-on-scroll">
                <h3 class="contact-form-title">Send Us a Quick Message</h3>
                <form class="contact-form-unique" id="contact-form">
                    <div class="form-group-unique">
                        <label for="name-unique">Your Name</label>
                        <input type="text" id="name-unique" name="name" placeholder="Full Name" required>
                    </div>
                    <div class="form-group-unique">
                        <label for="email-unique">Your Email</label>
                        <input type="email" id="email-unique" name="email" placeholder="abc@example.com" required>
                    </div>
                    <div class="form-group-unique">
                        <label for="phone-unique">Phone Number (Optional)</label>
                        <input type="tel" id="phone-unique" name="phone" placeholder="+91 XXXXXXXXXX">
                    </div>
                    <div class="form-group-unique">
                        <label for="subject-unique">Subject</label>
                        <input type="text" id="subject-unique" name="subject" placeholder="Course Inquiry, Partnership, etc." required>
                    </div>
                    <div class="form-group-unique">
                        <label for="message-unique">Your Message</label>
                        <textarea id="message-unique" name="message" rows="7" placeholder="Tell us how we can help you..." required></textarea>
                    </div>
                    <button type="submit" class="cta-button-unique">Send Message</button>
                </form>
            </div>
        </div>
    </section>

    <section id="map-section-unique">
        <div class="container map-container-unique animate-on-scroll">
            <h2 class="section-title text-center mb-8">Locate Our <span class="gradient-text">Campus</span></h2>
            <div class="map-embed-wrapper-unique">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3887.8967924376517!2d77.6323631750892!3d12.978586387349905!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae13d2f2b7a9f9%3A0xc3f12b6e1b6f0e21!2s17%2C%202nd%20Floor%2C%207th%20Main%20Rd%2C%20Indiranagar%20I%20Stage%2C%20Indiranagar%2C%20Bengaluru%2C%20Karnataka%20560038!5e0!3m2!1sen!2sin!4v1678912345678!5m2!1sen!2sin"
                    width="100%"
                    height="500"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="CodeNinjas Training Location"
                ></iframe>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
<script>
    feather.replace();
    const SUPABASE_URL = '<%= supabaseUrl %>';
    const SUPABASE_ANON_KEY = '<%= supabaseKey %>';
</script>
