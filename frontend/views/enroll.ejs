<%- include('partials/header') %>

<link rel="stylesheet" href="/css/enroll.css">

<main>
    <!-- ============================================ -->
    <!-- POP-UP MESSAGE CONTAINER (NEW) -->
    <!-- ============================================ -->
    <div id="popup-message" class="popup">
        <div class="popup-content">
            <span id="popup-text"></span>
            <button id="popup-close" class="popup-close-btn">&times;</button>
        </div>
    </div>

    <section id="enroll-form-section" class="enroll-container">
        <div class="form-wrapper">
            <nav class="breadcrumb">
                <a href="/courses/<%= category %>/<%= course %>"><i data-feather="chevron-left"></i> Back to Course Details</a>
            </nav>
            <div class="form-header">
                <div class="form-icon-wrapper">
                    <i class="fas fa-laptop-code"></i>
                </div>
                <h1 class="page-title">Enroll in <span class="gradient-text"><%= courseName %></span></h1>
                <p class="page-subtitle">Take the next step in your learning journey with CodeNinjas Training.</p>
            </div>

            <form class="enroll-form" id="enrollment-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <div class="input-with-icon">
                            <i class="fas fa-user"></i>
                            <input type="text" id="firstName" name="firstName" placeholder="John" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <div class="input-with-icon">
                            <i class="fas fa-user"></i>
                            <input type="text" id="lastName" name="lastName" placeholder="Doe" required>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="email" name="email" placeholder="john.doe@example.com" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <div class="input-with-icon">
                        <i class="fas fa-phone"></i>
                        <input type="tel" id="phone" name="phone" placeholder="+91 XXXXX XXXXX" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="selectedCourse">Selected Course</label>
                    <div class="input-with-icon">
                        <i class="fas fa-book-open"></i>
                        <input type="text" id="selectedCourse" name="selectedCourse" value="<%= courseName %>" readonly>
                    </div>
                </div>
                <button type="submit" class="cta-button">Submit Enrollment</button>
            </form>
            <p class="form-footer-text">By submitting this form, you agree to our Terms of Service and Privacy Policy.</p>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
<script>
    feather.replace();
    const SUPABASE_URL = '<%= supabaseUrl %>';
    const SUPABASE_ANON_KEY = '<%= supabaseKey %>';
</script>
<script src="/js/enroll.js"></script>
