    <!-- ============================================ -->
    <!-- COURSE HERO SECTION -->
    <!-- ============================================ -->
    <section id="course-hero">
        <div class="container">
            <nav class="breadcrumb animate-on-scroll">
                <a href="/courses"><i data-feather="chevron-left"></i> Back to Courses</a>
            </nav>
            <h1 class="course-page-title animate-on-scroll">Stock <span class="gradient-text">Market</span></h1>
            <p class="course-page-subtitle animate-on-scroll">Unlock your potential with CodeNinjas Training's expert-led stock market program.</p>
        </div>
    </section>

    <!-- ============================================ -->
    <!-- COURSE META BANNER -->
    <!-- ============================================ -->
    <section id="course-meta-banner" class="container">
        <div class="meta-grid animate-on-scroll">
            <div class="meta-item">
                <i data-feather="clock"></i>
                <div>
                    <strong>Duration</strong>
                    <span>6 Weeks</span>
                </div>
            </div>
            <div class="meta-item">
                <i data-feather="bar-chart-2"></i>
                <div>
