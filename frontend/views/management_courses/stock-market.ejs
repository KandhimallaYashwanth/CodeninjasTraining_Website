    <!-- ============================================ -->
    <!-- COURSE OVERVIEW & IMAGE SECTION (NEW LAYOUT) -->
    <!-- ============================================ -->
    <section id="course-overview" class="container">
        <div class="overview-content animate-on-scroll">
            <div class="overview-visual">
                <img src="/images/stock-market.jpg" alt="Stock Market">
            </div>
            <h2 class="section-title">Course Overview</h2>
            <p>Learn the fundamentals of the stock market, including technical and fundamental analysis, risk management, and various investment strategies.</p>
            <p>Suitable for beginners looking to navigate the world of stock trading.</p>
        </div>
    </section>

    <!-- ============================================ -->
