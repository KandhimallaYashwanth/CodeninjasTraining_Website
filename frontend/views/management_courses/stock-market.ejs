    <section id="learning-outcomes-section">
        <div class="container">
            <div class="section-header text-center animate-on-scroll">
                <h2 class="section-title">What You'll Learn</h2>
            </div>
            <div class="learning-outcomes-grid animate-on-scroll">
                <div class="learning-item"><i data-feather="check-circle"></i><span>Market Basics & Terminology</span></div>
                <div class="learning-item"><i data-feather="check-circle"></i><span>Technical Analysis</span></div>
                <div class="learning-item"><i data-feather="check-circle"></i><span>Fundamental Analysis</span></div>
                <div class="learning-item"><i data-feather="check-circle"></i><span>Risk Management</span></div>
                <div class="learning-item"><i data-feather="check-circle"></i><span>Trading Psychology</span></div>
            </div>
        </div>
    </section>

    <!-- ============================================ -->
    <!-- HELP & ADMISSIONS SECTION -->
    <!-- ============================================ -->
    <section id="course-help">
        <div class="container text-center animate-on-scroll">
            <h2 class="section-title">Need Help?</h2>
            <p class="section-subtitle">Have questions about this course or not sure if it's the right fit? Our advisors are here to help!</p>
            <a href="/contact" class="cta-button-secondary" style="margin-top: 2rem;">Contact Admissions</a>
