<%- include('partials/header') %>
<link rel="stylesheet" href="/css/index.css">

<main>
    <!-- ============================================ -->
    <!-- HERO SECTION -->
    <!-- ============================================ -->
    <section id="hero" class="container">
        <div class="split-section">
            <div class="hero-content animate-on-scroll">
                <h1 class="hero-title">
                    Transform Your Career with
                    <span class="gradient-text">Expert IT Training.</span>
                </h1>
                <p class="hero-subtitle">
                    Join CodeNinjas Training and master cutting-edge technologies with industry experts. Get job-ready skills, hands-on experience, and placement assistance.
                </p>
                <div class="hero-cta">
                    <a href="/courses" class="cta-button">Explore Courses</a>
                    <a href="/contact" class="cta-button-secondary">Contact Us</a>
                </div>
            </div>
            <div class="hero-visual animate-on-scroll">
                <div class="tech-icon" style="--i:1;"><img src="https://placehold.co/60x60/264653/FEFBF6?text=PY" alt="Python"></div>
                <div class="tech-icon" style="--i:2;"><img src="https://placehold.co/80x80/2A9D8F/FEFBF6?text=AI" alt="AI"></div>
                <div class="tech-icon" style="--i:3;"><img src="https://placehold.co/50x50/F4A261/FEFBF6?text=JS" alt="JavaScript"></div>
                <div class="tech-icon" style="--i:4;"><img src="https://placehold.co/70x70/E76F51/FEFBF6?text=DB" alt="Database"></div>
                <div class="tech-icon" style="--i:5;"><img src="https://placehold.co/65x65/264653/FEFBF6?text=React" alt="React"></div>
            </div>
        </div>
    </section>

    <!-- ============================================ -->
    <!-- STATS BANNER SECTION (WITH ICONS) -->
    <!-- ============================================ -->
    <section id="stats-banner">
        <div class="container stats-grid">
            <div class="stat-item">
                <i data-feather="users"></i>
                <h3 class="stat-number">5000+</h3>
                <p>Students Trained</p>
            </div>
            <div class="stat-item">
                <i data-feather="trending-up"></i>
                <h3 class="stat-number">95%</h3>
                <p>Placement Rate</p>
            </div>
            <div class="stat-item">
                <i data-feather="briefcase"></i>
                <h3 class="stat-number">50+</h3>
                <p>Industry Partners</p>
            </div>
            <div class="stat-item">
                <i data-feather="star"></i>
                <h3 class="stat-number">4.9</h3>
                <p>Average Rating</p>
            </div>
        </div>
    </section>

    <!-- ============================================ -->
    <!-- ABOUT SECTION -->
    <!-- ============================================ -->
    <section id="about" class="container">
        <div class="split-section">
            <div class="about-visual animate-on-scroll">
                <img src="/images/about.jpg" alt="A team of developers collaborating at CodeNinjas">
            </div>
            <div class="about-content animate-on-scroll">
                <h2 class="section-title">
                    Welcome to <br>
                    <span class="gradient-text">CodeNinjas Training.</span>
                </h2>
                <p>We are a premier IT training institute dedicated to bridging the gap between academic learning and industry requirements. With years of experience, we've successfully trained thousands of students and professionals.</p>
                <ul class="feature-list">
                    <li><i data-feather="award"></i> Industry-Experienced Trainers</li>
                    <li><i data-feather="code"></i> Hands-On Practical Training</li>
                    <li><i data-feather="briefcase"></i> Dedicated Placement Assistance</li>
                    <li><i data-feather="clock"></i> Flexible Learning Schedules</li>
                </ul>
                <a href="#" class="cta-button-secondary" style="margin-top: 2rem;">Learn More About Us</a>
            </div>
        </div>
    </section>

    <!-- ============================================ -->
    <!-- SERVICES SECTION (WITH BUTTON) -->
    <!-- ============================================ -->
    <section id="services">
        <div class="container">
            <div class="section-header text-center animate-on-scroll">
                <h2 class="section-title">Our Expert <span class="gradient-text">Services</span></h2>
                <p class="section-subtitle">We provide the tools and expertise to elevate your business operations.</p>
            </div>
            <div class="services-layout animate-on-scroll">
                <!-- Left: Interactive List -->
                <div class="services-list">
                    <div class="service-item active" data-image="/images/web_app.jpg">
                        <div class="service-icon"><i data-feather="smartphone"></i></div>
                        <div class="service-text">
                            <h4>Web and App Development</h4>
                            <p>Engaging apps for modern audiences.</p>
                        </div>
                    </div>
                    <div class="service-item" data-image="/images/software.jpg">
                        <div class="service-icon"><i data-feather="figma"></i></div>
                        <div class="service-text">
                            <h4>Custom Software Development</h4>
                            <p>Tailored solutions for your unique business needs.</p>
                        </div>
                    </div>
                    <div class="service-item" data-image="/images/maintenance.jpg">
                        <div class="service-icon"><i data-feather="tool"></i></div>
                        <div class="service-text">
                            <h4>Software Support & Maintenance</h4>
                            <p>Reliable support to ensure uptime and performance.</p>
                        </div>
                    </div>
                    <div class="explore-services-link">
                        <a href="#" class="cta-button-secondary">Explore All Services <i data-feather="arrow-right"></i></a>
                    </div>
                </div>
                <!-- Right: Visual Panel -->
                <div class="services-visual-panel">
                    <img src="/images/web_app.jpg" alt="Web and App Development" id="service-image">
                </div>
            </div>
        </div>
    </section>

    <!-- ============================================ -->
    <!-- FEATURED COURSES -->
    <!-- ============================================ -->
